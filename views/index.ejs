<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS TasksApp</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-50">
    <div class="flex flex-col space-y-12 items-center justify-center min-h-screen">

        <div class="flex flex-col space-y-4 bg-white shadow-lg rounded w-1/2 p-6 py-10 justify-center items-center">
            <h1 class="text-xl">Add New Task</h1>
            <div class="flex justify-center items-center w-full">
                <input id="new_task_title" required class="w-10/12 border focus:border-gray-200 rounded-l py-1 px-4 focus:outline-none" type="text">
                <button class="px-3 py-2 text-white text-sm rounded-r bg-green-400" onclick="AddTask()">Submit</button>
            </div>
        </div>

        <% tasks.forEach(task => { %>
            <div class="flex flex-col space-y-4 bg-white shadow-lg rounded w-1/3 p-6 px-12 justify-start">
                <div class="flex justify-between">
                    <p class=""><%= task.title %></p>
                    <div class="flex space-x-2">
                        <button onclick="EditTask('<%= task._id %>')">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                        </button>
                        <button onclick="DeleteTask('<%= task._id %>')">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        <% }); %> 
    </div>

    <script src="./task.js"></script>

</body>
</html>